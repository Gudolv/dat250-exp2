<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
    <persistence-unit name="bank" transaction-type="RESOURCE_LOCAL">
        <class>experiment2.tables.Address</class>
        <class>experiment2.tables.Bank</class>
        <class>experiment2.tables.CreditCard</class>
        <class>experiment2.tables.Person</class>
        <class>experiment2.tables.Pincode</class>
        <properties>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <!-- TODO Change the path in the value of the property "javax.persistence.jdbc.url" here! -->
            <property name="javax.persistence.jdbc.url"
                      value="jdbc:derby:/home/gudolv/IdeaProjects/Experiment2/bankDb;create=true"/>
            <property name="javax.persistence.jdbc.user" value="test"/>
            <property name="javax.persistence.jdbc.password" value="test"/>

            <property name="eclipselink.ddl-generation" value="create-tables"/>
            <property name="eclipselink.ddl-generation.output-mode" value="database"/>
        </properties>

    </persistence-unit>
</persistence>